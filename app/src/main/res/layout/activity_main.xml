<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/buttonWhite"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="15dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/unpressed_btn_layout"
        android:orientation="vertical"
        android:translationZ="20dp">

        <TextView
            android:id="@+id/input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/output_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="35sp" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/unpressed_btn_layout"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="clearOnClick"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="^"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="powerOnClick"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DEL"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
               android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="deleteOnClick"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/divBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="divisionOnClick"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/unpressed_btn_layout"
                    android:textColor="@color/black"
                    android:onClick="sevenOnClick"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="eightOnClick"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="nineOnClick"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="multiplyOnClick" android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="fourOnClick"  android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="fiveOnClick"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"  />
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="sixOnClick" android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="subtractionOnClick" android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="additionOnClick" android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="pointOnClick" android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="()"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="bracketOnClick" android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/unpressed_btn_layout"
                android:textColor="@color/black"
                android:onClick="equalsOnClick" android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>


